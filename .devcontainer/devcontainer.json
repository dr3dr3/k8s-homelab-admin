{
    "name": "DR3-CLI-TOOLS",

    "build": {
        "dockerfile": "Dockerfile"
    },

    "workspaceFolder": "/workspace/admin",

    "postCreateCommand": "echo 'Ready'",

    "postStartCommand": "./init.sh",

    "customizations": {
        "vscode": {
            "extensions": [
                "github.vscode-pull-request-github",
                "github.copilot",
                "redhat.vscode-yaml",
                "ms-kubernetes-tools.vscode-kubernetes-tools",
                "1Password.op-vscode"
            ]
        }
    },

    "forwardPorts": [
        8080
    ],

    "settings": {
        "terminal.integrated.shell.*": "/bin/zsh"
    }
}
